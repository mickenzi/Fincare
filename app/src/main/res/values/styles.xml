<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bottom_navigation_view" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/background_color</item>
        <item name="itemBackground">@color/background_color</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="highlighted_text">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="item_title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/on_surface_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="item_body">
        <item name="android:textColor">@color/on_surface_color</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="item_additional_info" parent="highlighted_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="outlined_button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary_color</item>
    </style>

    <style name="horizontal_buttons_flow">
        <item name="flow_horizontalBias">0</item>
        <item name="flow_verticalBias">0</item>
        <item name="flow_horizontalGap">@dimen/flow_horizontal_gap</item>
        <item name="flow_horizontalStyle">packed</item>
        <item name="flow_wrapMode">chain</item>
    </style>

    <style name="fab_add" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:src">@drawable/ic_baseline_add_24</item>
    </style>

    <style name="input_field" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
    </style>

    <style name="button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="wrap_content_dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowMinWidthMajor">0%</item>
        <item name="android:windowMinWidthMinor">0%</item>
    </style>

    <style name="toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary_color</item>
        <item name="titleTextColor">@color/white</item>
    </style>
</resources>